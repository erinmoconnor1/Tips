body {
  font-family: 'Arial', sans-serif;
  margin: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background: radial-gradient(circle, #000000 1%, transparent 1.5%) 0 0,
              radial-gradient(circle, #000000 1%, transparent 1.5%) 3px 3px,
              radial-gradient(circle, #000000 1%, transparent 1.5%) 6px 6px,
              radial-gradient(circle, #000000 1%, transparent 1.5%) 9px 9px,
              radial-gradient(circle, #000000 1%, transparent 1.5%) 12px 12px,
              linear-gradient(to right, #141e30, #243b55);
  background-size: 12px 12px, 12px 12px, 12px 12px, 12px 12px, 12px 12px, 100% 100%;
  animation: shootingStarAnimation 2s linear infinite;
}

@keyframes shootingStarAnimation {
  to {
    background-position: 12px 12px, 24px 24px, 36px 36px, 48px 48px, 60px 60px, 100% 100%;
  }
}

.App {
  background-color: rgba(255, 255, 255, 0.9);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  padding: 20px;
  border-radius: 8px;
  text-align: center;
}

body {
  font-family: 'Arial', sans-serif;
  margin: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background: linear-gradient(to right, #1a2a6c, #b21f1f, #fdbb2d);
  background-size: 600% 100%;
  animation: gradientAnimation 10s ease infinite;
}

@keyframes gradientAnimation {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

.App {
  background-color: rgba(255, 255, 255, 0.9);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  padding: 20px;
  border-radius: 8px;
  text-align: center;
}

h1 {
  color: #333;
}

/* Styles for input container with dollar sign */
.input-container {
  position: relative;
  margin-bottom: 16px;
}

.input-container::before {
  content: "$"; /* Add the dollar sign*/
  position: absolute;
  top: 50%;
  left: 10px; /* Adjust the left position as needed */
  transform: translateY(-50%);
  font-size; 16px; /* Adjust the font size as needed */
  color: #555; /* Adjust the color as needed */
}

.input-container input {
  width: 100px;
  margin: 4px;
  border: 1px solid #ccc;
  border-radius: 4px;
  outline: none;
  padding-left: 20px; /* Add some left padding to make room for the dollar sign */

label {
  display: block;
  margin-bottom: 8px;
  color: #555;
}

input {
  width: 100%;
  margin: 4px;
  border: 1px solid #ccc;
  border-radius: 4px;
  outline: none;
}

input:focus {
  border: 2px solid #4caf50;
}

button {
  background-color: #4caf50;
  color: #fff;
  padding: 10px 20px;
  font-size: 16px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  transition: background-color 0.3s;
}

button:hover {
  background-color: #45a049;
}

p {
  margin-top: 16px;
  font-size: 18px;
  color: #333;
